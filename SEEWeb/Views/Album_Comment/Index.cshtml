@using PagedList.Mvc;
@model PagedList.IPagedList<Model.Album_Comment>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutManager.cshtml";
}
<!DOCTYPE html>
<html>
<head>
    <link href="~/Content/PagedList.css" rel="stylesheet" />
</head>
<body class="layui-bg-gray"> 
    <div class="layui-row">
        <blockquote class="layui-elem-quote layui-text">
            相册评论查询
        </blockquote>
    </div>
    <div class="layui-col-md4 layui-col-md-offset8">
        <div>
            @using (Html.BeginForm("Index", "Album_Comment", FormMethod.Post, new { @class = "search_form" }))
            {
                <div class="layui-form">
                    <div class="layui-form-item">
                        <div class="layui-input-block">
                            <span><input type="text" placeholder="请输入搜索内容" name="search" style="height:25px" /></span>
                            <button class="layui-btn layui-btn-sm">搜索</button>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
    <table class="layui-anim layui-anim-scale layui-table">
        <colgroup>
            <col width="100" />
            <col width="100" />
            <col width="100" />
            <col width="600" />
            <col width="200" />
            <col />
        </colgroup>
        <thead>
            <tr>
                <th>评论编号</th>
                <th>评论人</th>
                <th>相册编号</th>
                <th>评论内容</th>
                <th>评论时间</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.AC_ID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UserInfo.User_Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Alb_ID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AC_Mes)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AC_Time)
                    </td>
                    <td>
                        @Html.ActionLink("删除", "Delete", new { id = item.AC_ID }, new { @class = "layui-btn layui-btn-danger layui-btn-sm" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div class="layui-row">
        <div class="layui-col-md4 layui-col-md-offset4">
            <div>
                第 @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) 页  共 @Model.PageCount 页
            </div>
            <div>
                @Html.PagedListPager(Model, page => Url.Action("Index", "Album_Comment", new { page }))
            </div>
        </div>
    </div>
</body>
</html>

   
