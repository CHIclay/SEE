                            </div>
                        }
                    </p>
                </div> <!-- /.item -->
            </div> <!-- /.owl-carousel -->
        </div> <!-- /.container -->
    </section> <!-- /.twitter-feed -->
    <!-- Portfolio -->
    <section class="porfolio"></section>
    <section class="portfolio" id="portfolio">
        <div class="container section-wrapper">
            <h2 class="section-title black">
                最  新  相  册
            </h2>
            <div class="underline purple"></div>
            <div class="row">
                @foreach (var p in Model.Album)
                {
                    <div class="col-sm-4 col-xs-6">
                        <div class="portfolio-item">
                            <div class="portfolio-img">
                                <img src="@p.Alb_Pic" alt="port3" height="280" />
                                <div class="portfolio-img-hover">
                                    <a href="@Url.Action("Details","Album",new {id=p.Alb_ID})"><img src="~/Content/_share/User/assets/images/plus.png" class="plus"></a>
                                </div>
