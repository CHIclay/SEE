@using Model
@model SEEWeb.ViewModel.SearchViewModel
@{
    ViewBag.Title = "search";
}
<section class="portfolio" id="portfolio">
    <div class="container section-wrapper">
        <div><h1>搜索结果</h1></div>

        <h2 class="section-title black">
            活  动
        </h2>
        <div class="underline purple"></div>
        <div class="row">
            @foreach (var p in Model.activity)
            {
                <div class="col-sm-4 col-xs-6">
                    <div class="portfolio-item">
                        <div class="portfolio-img">

                            <img src="@p.Ac_Pic" alt="port3" height="280" />

                            <div class="portfolio-img-hover">
                                <a href="@Url.Action("Details","Activity",new {id=p.Ac_ID})"><img src="~/Content/_share/User/assets/images/plus.png" class="plus"></a>
                            </div>
                        </div>
                        <div class="portfolio-item-details">
                            <div class="portfolio-item-name">
                                <a href="@Url.Action("Details","Activity",new {id=p.Ac_ID})">@p.Ac_Mes </a>    <br />
                            </div>

                            <div class="port-heart">
                                <i class="ion-ios-heart-outline"></i>  @p.PicInActivity.Count()
                            </div>
                        </div>

                    </div>
                </div>
            }
        </div>
    </div>
</section>
<section class="portfolio" id="portfolio">
    <div class="container section-wrapper">
        <h2 class="section-title black">
            新  闻
        </h2>
        <div class="underline purple"></div>
        <div class="row">
            @foreach (var p in Model.news)
            {
                <div class="col-sm-12 col-xs-12">
                    <div class="portfolio-item">

                        <div style="float:left;margin-right:20px;">
                            <a href="@Url.Action("Details","News",new {id=p.News_ID})">
                                <img height="150" src="@p.News_Pic" />
                            </a>
                        </div>
                        <div style="margin-left:200px;">
                            <a href="@Url.Action("Details","News",new {id=p.News_ID})">
                                <h3>
                                    @p.News_Name
                                </h3>

                            </a>
                        </div>
                        <div style=" background: #e0e0e0;color: #666;padding: 2px 4px; float:right">
                            <a href="@Url.Action("Details","News",new {id=p.News_ID})">
                                @p.News_Time
                            </a>
                        </div>
                    </div>
                </div>
                <div>
                    <li class="icon underline"></li>
                    <hr />
                </div>
            }
        </div>
    </div>
</section>


<section class="portfolio" id="portfolio">
    <div class="container section-wrapper">
        <h2 class="section-title black">
           图  片
        </h2>
        <div class="underline purple"></div>
        <div class="row">
            <div id="Div1">
                @foreach (var p in Model.picture)
                {

                    <div class="col-sm-4 col-xs-6">
                        <div class="portfolio-item">
                            <div class="portfolio-img">

                                <img src="@p.Pic_Pic" alt="port3" height="280" />

                                <div class="portfolio-img-hover">
                                    <a href="@Url.Action("Details","Picture", new {id=p.Pic_ID,@class="b-link-stripe b-animate-go  swipebox"})">     <img src="~/Content/_share/User/assets/images/plus.png" class="plus"></a>
                                </div>
                            </div>
                            <div class="portfolio-item-details">
                                <div class="portfolio-item-name">
                                    @p.Picture_Type.Name<br /> <small>  <a href="@Url.Action("UserIndex","User",new {UID=p.UserInfo.UID})"> @p.UserInfo.User_Name  </a></small>
                                </div>

                                <div class="port-heart">
                                    <i class="ion-ios-heart-outline"></i>  @p.Pic_Point.Count()
                                </div>
                            </div>

                        </div>
                    </div>


                }
            </div>

        </div>
    </div>
</section>


<section class="portfolio" id="portfolio">
    <div class="container section-wrapper">
        <h2 class="section-title black">
            相  册
        </h2>
        <div class="underline purple"></div>
        <div class="row">
            @foreach (var p in Model.album)
            {
                <div class="col-sm-4 col-xs-6">
                    <div class="portfolio-item">
                        <div class="portfolio-img">

                            <img src="@p.Alb_Pic" alt="port3" height="280" />

                            <div class="portfolio-img-hover">
                                <a href="@Url.Action("Details","Album",new {id=p.Alb_ID})"><img src="~/Content/_share/User/assets/images/plus.png" class="plus"></a>
                            </div>
                        </div>
                        <div class="portfolio-item-details">
                            <div class="portfolio-item-name">
                                <a href="@Url.Action("Details","Album",new {id=p.Alb_ID})"> @p.Alb_Name  </a>   <br />    <small>  <a href="@Url.Action("UserIndex","User",new {UID=p.UserInfo.UID})">@p.UserInfo.User_Name  </a></small>
                            </div>

                            <div class="port-heart">
                                <i class="ion-ios-heart-outline"></i>  @p.Album_Point.Count()
                            </div>
                        </div>

                    </div>
                </div>
            }




        </div>
    </div>
 
</section>