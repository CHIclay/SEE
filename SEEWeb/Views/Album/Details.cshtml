@using PagedList.Mvc
@using Model
@model SEEWeb.ViewModel.AlbumViewModel
@{
    ViewBag.Title = "Details";
}

<section class="section-background">
    <div class="container">
        <ol class="breadcrumb">
            <li><a href="@Url.Action("Index","Index")">主页</a></li>
            <li class="active"><a href="@Url.Action("Index","Album")">&nbsp;相册</a></li>
            <li style="float:right">@Html.ActionLink("创建我的相册", "Add")  </li>
        </ol>


    </div>
</section>
<section class="portfolio" id="portfolio">
    <div class="container section-wrapper">
        <h2 class="section-title black">
            Details  Of  SEE  Album
        </h2>
        <div class="underline purple"></div>
        <div class="row">
            <div class="col-md-6 col-sm-6">
                <img src="@Model.Album1.Alb_Pic" width="400" height="350" />
            </div>
            <div class="col-md-6 col-sm-12" style="height：350px">
                <p class="about-detail">
                    @Model.Album1.Alb_Name
                </p>
                <p class="about-detail">
                    @Model.Album1.Alb_Mes
                </p>
                <p class="about-detail">
                   上传时间： @Model.Album1.Alb_Time
                </p>
               
                <p>点赞数</p>
                @Model.Album_Point.Count()
                <p>收藏数</p>
                @Model.Album_Save.Count()
            </div>
            <div>
                <div>

                
                    <div>
                        包含的图片
                        @{ Html.RenderAction("Index", "Picture_In_Album");}
                    </div>
                </div>
                <div>
                    <div>
                        @if (Session["User_Name"] != null)
                        {
                            <a href="@Url.Action("Save","Album",new { Alb_ID=Model.Album1.Alb_ID})">
                                <p>收藏</p>
                            </a>
                        }
                        else
                        {
                            <p>nothing</p>
                        }
                    </div>
                </div>
                <div>

                </div>
                <div class="comment-primary">
                    @using (Html.BeginForm("AC_Add", "Album", FormMethod.Post, new { id = "pinglun", @class = "postbox", enctype = "multipart/form-data" }))
                    {

                        <div class="textarea-wrapper">
                            <textarea class="textarea" name="acmes"></textarea>
                        </div>
                        <input type="hidden" name="albid" value="@Model.Album1.Alb_ID" />
                        if (Session["User_Name"] != null)
                        {
                            <a href="javascript:document.getElementById('pinglun').submit()" class="u-btn btn-postcmt">发表评论</a>

                        }
                        else
                        {
                            <a href="#" id="example2" class="u-btn btn-postcmt">发表评论</a>

                        }
                    }
                </div>

                <div>
                    <div>
                        @if (Session["User_Name"] != null)
                        {
                            <a href="@Url.Action("Point", "Album", new {Alb_ID=Model.Album1.Alb_ID})">

                                <p>点赞</p>
                            </a>
                        }
                        else
                        {
                            <p>nothing</p>
                        }
                    </div>
                </div>
                <div>
                    @*@{ Html.RenderAction("News_Comment", "News_Comment");}*@
                    @foreach (Album_Comment p in Model.Album_Comment)
                    {
                        @p.User.User_Name
                        @p.AC_Mes

                        @p.AC_Time
                        <br />
                    }
                </div>

            </div>
        </div>
    </div>
</section>


