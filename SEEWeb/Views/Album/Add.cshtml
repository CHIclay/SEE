@model Model.Album

@{
    ViewBag.Title = "Add";
}
<link href="~/Content/layui/css/layui.css" rel="stylesheet" />
<section class="section-background">
    <div class="container">
        <ol class="breadcrumb">
            <li><a href="@Url.Action("Index","Index")">主页</a></li>
            <li class="active"><a href="@Url.Action("Index","Album")">&nbsp;相册</a></li>
            <li class="active"><a href="#">相册创建</a></li>
        </ol>


    </div>
</section>
<section class="about" id="about" style="background: #f3f3f3;">
    <div class="container section-wrapper">
        <h2 class="section-title black">
            创  建  相  册
        </h2>
        <div class="underline purple"></div>

        @using (Html.BeginForm("Add", "Album", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-horizontal">
            <div class="col-sm-3 col-xs-12 form-group">
                &nbsp;
            </div>
            <div class="col-sm-2 col-xs-12 form-group">
                &nbsp;
            </div>
            <div class="col-sm-4 col-xs-12 form-group">
                <div class="layui-form">
                    <div class="layui-form-item">
                        <div>
                            @Html.EditorFor(model => model.Alb_Name, new { htmlAttributes = new { @class = "layui-input", placeholder = "请输入相册名称" } })
                            @Html.ValidationMessageFor(model => model.Alb_Name)
                        </div>
                        <br /><br />
                        <div>
                            @Html.EditorFor(model => model.Alb_Mes, new { htmlAttributes = new { @class = "layui-input", placeholder = "请输入相册简介" } })
                            @Html.ValidationMessageFor(model => model.Alb_Mes)
                        </div>
                        <br /><br />
                        <div>
                            <input type="file" name="albumimage" />
                        </div>
                        <div style="float:right;margin-top:30px;">
                            <input type="submit" value="创建相册" class="btn" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
        }


    </div>
</section>

  