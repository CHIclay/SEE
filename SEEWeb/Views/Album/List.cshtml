@using Model
@model Common.PagingHelper<Album>
    @{ 
        ViewBag.Titile = "List";
        Layout = "~/Views/Shared/_LayoutManager.cshtml";
    }

<body class="app sidebar-mini rtl">

    <div class="app-title">
        <div class="div">
            <h1><i class="fa fa-dashboard"></i>相册管理</h1>
            <p>相册为用户提供了更好的图片欣赏体验，管理者需要严格把控相册审核</p>
        </div>
        <ul class="app-breadcrumb breadcrumb">
            <li class="breadcrumb-item"><i class="fa fa-home fa-lg"></i></li>
            <li class="breadcrumb-item"><a href="@Url.Action("List","Album")">相册管理</a></li>
        </ul>
    </div>
    <div class="tile mb-4">
        <div>
            <div>


                <table class="table">
                    <thead>
                        <tr>
                            <th>相册ID</th>
                            <th>用户ID</th>
                            <th>用户姓名</th>
                            <th>相册封面</th>
                            <th>相册描述</th>

                            <th>上传时间</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.GetPagingData())
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Alb_ID)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.User_ID)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem=>item.User.User_Name)
                                </td>
                                <td>
                                    @if (string.IsNullOrEmpty(item.Alb_Pic))
                                    {
                                        @:none
                                    }
                                    else
                                    {
                                        <img width="75" height="75" src="@Url.Content(item.Alb_Pic)" alt="images" />
                                    }
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Alb_Mes)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.Alb_Time)
                                </td>
                                <td>
                                    @Html.ActionLink("删除", "Delete", new { id = item.Alb_ID })
                                </td>
                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            @if (Model.HasPrev)
                            {
                                <td><a href="@Url.Action("List", "Album", new { pageIndex = Model.PageIndex - 1 })">上一页</a></td>
                            }
                            else
                            {
                                <td><em style="color:Gray">上一页</em></td>
                            }
                            @if (Model.HasNext)
                            {
                                <td><a href="@Url.Action("List", "Album", new { pageIndex = Model.PageIndex + 1 })">下一页</a></td>
                            }
                            else
                            {
                                <td><em style="color:Gray">下一页</em></td>
                            }
                        </tr>
                    </tfoot>
                </table>

            </div>
        </div>

    </div>
</body>
    
