@model SEEWeb.ViewModel.UserInfoViewModel
@using Model
@{
    ViewBag.Title = "UserIndex";
}
<!DOCTYPE HTML>
<html>
<head>
    <link href="~/Content/_share/userindex/css/style1.css" rel="stylesheet" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="keywords" content="" />
</head>
<body>
    <div class="technology">
        <div class="container">
            <div class="col-md-9 technology-left">
                <div class="blog">
                    <span><img src="@Model.User1.User_Img" height="50" width="50" /></span>
                    <br />
                    <h2 class="w3" style="color:#97b7b7">@Model.User1.User_Name 的主页 </h2>
                    <span style="float:right;">
                        @if (Session["User_Name"] != null)
                        {
                            if (ViewBag.attentionde != null)
                            {
                                <a href="@Url.Action("attention","User",new { ToUID=Model.User1.UID}) ">
                                    <b>已关注</b>
                                </a>
                            }
                            if (ViewBag.attentionde == null)
                            {
                                <a href="@Url.Action("attention","User",new { ToUID=Model.User1.UID}) ">
                                    关注
                                </a>
                            }
                        }
                    </span>
                    <hr />
                    <h3>他/她的图片</h3>
                    <div class="blog-grids1">
                        @foreach (Picture p in Model.Picture1)
                        {
                            <div class="col-md-6 blog-grid">
                                <div class="blog-grid-left1">
                                    <img src="@p.Pic_Pic" style="object-fit:cover" height="280" />
                                </div>

                                <div class="blog-grid-right1">

                                    <h4 style="color:#97b7b7">@p.Pic_Time</h4>
                                    <p>
                                        @p.Pic_Mes
                                    </p>
                                    <a style="float:right;color:cadetblue;margin-top:-35px;font-size:20px;"  href="@Url.Action("Details","Picture",new {id=p.Pic_ID})">查看详细</a>
                                </div>                                  
                            </div>
                        }
                    </div>
                </div>
            </div>
            <!-- technology-right -->
            <div class="col-md-3 technology-right">
                <div class="blo-top1">
                    <div class="tech-btm">
                        <h4 style="color:#97b7b7">他/她关注的 </h4>
                        @{ Html.RenderAction("UserAttention1", "User");}
                        <h4 style="color:#97b7b7" >关注他/她的</h4>
                        @{ Html.RenderAction("UserAttention", "User");}
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>