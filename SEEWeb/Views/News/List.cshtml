@model IEnumerable<Model.News>

@{
    ViewBag.Title = "List";
            Layout = "~/Views/Shared/_LayoutManager.cshtml";
}

<html>
<head>
    <meta charset="utf-8" />
    <!-- 配置文件 -->
    <script src="~/utf8-net/ueditor.config.js"></script>
    <!-- 编辑器源码文件 -->
    <script src="~/utf8-net/ueditor.all.js"></script>
    <link href="~/utf8-net/themes/iframe.css" rel="stylesheet" />
    <script src="~/utf8-net/lang/zh-cn/zh-cn.js"></script>
</head>
<body>
    <p>
        @Html.ActionLink("发布新闻", "Add")
        @Html.ActionLink("管理有关新闻评论", "Index", "News_Comment")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.News_ID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Man_ID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.News_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.News_Pic)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.News_Mes)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.News_Time)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.News_ID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Man_ID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.News_Name)
                </td>
                <td>
                    @if (string.IsNullOrEmpty(item.News_Pic))
                    {
                        @:none
                    }
                    else
                    {
                        <img width="75" height="75" src="@Url.Content(item.News_Pic)" alt="images" />
                    }

                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.News_Mes)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.News_Time)
                </td>
                <td>
                    @Html.ActionLink("修改", "Edit", new { id = item.News_ID }) |
                    @Html.ActionLink("查看详细", "Details2", new { id = item.News_ID }) |
                    @Html.ActionLink("删除", "Delete", new { id = item.News_ID })
                </td>
            </tr>
        }

    </table>
</body>
</html>
