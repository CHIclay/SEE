@using PagedList.Mvc;
@model PagedList.IPagedList<Model.News>
@{
    ViewBag.Title = "News";
    Layout = null;
}

    <div class="row">
        @foreach (var p in Model)
        {
            <div class="col-sm-12 col-xs-12" style="background-color:#f7f7f7;">
                <div>
                    <div style="float:left;margin-right:20px;">
                        <a href="@Url.Action("Details",new {id=p.News_ID})">
                            <img height="150" width="200" src="@p.News_Pic" />
                        </a>
                    </div>
                    <hr />
                    <div  style="margin-left:200px;margin-top:20px;font-size:22px;">
                        <a href="@Url.Action("Details",new {id=p.News_ID})">
                                @p.News_Name                  
                        </a>
                    </div>
                    <div style=" background: #e0e0e0;color: #666;padding: 2px 4px; float:right;margin-top:30px;">
                            @p.News_Time.ToString().Substring(0, 10)
                    </div>
                </div>
             </div> 
            }
     </div>
    <div class="container">
        <div style="float:right">
            第 @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) 页 / 共 @Model.PageCount 页
            <br />
            @Html.PagedListPager(Model, page => Url.Action("Index", "News", new { page }))
        </div>
    </div>
               

          

            
