@model Model.Picture
@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

<div>
    <div>
        @using (Html.BeginForm("AfterCreate", "Picture", FormMethod.Post, new { enctype = "multipart/form-data" }))

        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "")
           
            <div>
                @Html.LabelFor(model => model.Pic_Pic)
                <div>
                    <input type="file" name="image" />
                </div>
            </div>
            <div>
                @Html.DropDownListFor(model=>model.Type_ID,ViewBag.picturetype as SelectList,"请选择类型")<br />
                @Html.ValidationMessageFor(model=>model.Type_ID,"")
            </div>
            <div>
                @Html.LabelFor(model => model.Pic_Mes)
                <div>

                    @Html.EditorFor(model => model.Pic_Mes)
                    @Html.ValidationMessageFor(model => model.Pic_Mes)
                </div>
            </div>
            <div>
                <div>
                    <input type="submit" value="发表图片" />
                </div>
            </div>
            <div>
                @Html.ActionLink("返回主页", "Index")
            </div>
        }

    </div>
</div>
