@using PagedList.Mvc;
@model PagedList.IPagedList<Model.Picture>
@{
    ViewBag.Title = "Picture";
    Layout = null;
}

<!DOCTYPE html>
<style>
</style>
<div>
    <div>

    </div>
    <div>
        <h2>图片列表</h2>
        <div>

            @foreach (var p in Model)
            {

                <div>
                    <a href="@Url.Action("Details",new {id=p.Pic_ID})">
                        <img width="100" height="100" src="@p.Pic_Pic" />
                    </a>
                </div>
                <div>
                    @p.User.User_Name
                </div>
                <div>
                    @p.Pic_Mes
                </div>
                <div>
                    @p.Pic_Time
                </div>
                <div>

                    <a href="@Url.Action("Delete1","Picture",new { id = p.Pic_ID})">删除</a>
                </div>

            }

        </div>
        <div>
            <div>
                Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount
            </div>
            <div>
                @Html.PagedListPager(Model, page => Url.Action("Index", "Picture", new { page }))
            </div>
        </div>
    </div>
</div>