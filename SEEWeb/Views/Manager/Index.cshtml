@model Common.PagingHelper<Manager>
    @using Model

    @{ 
        ViewBag.Title = "Index";
        Layout = "~/Views/Shared/_LayoutManager.cshtml";
    }
<body class="app sidebar-mini rtl">
    <div class="app-title">
        <div class="div">
            <h1><i class="fa fa-dashboard"></i>站内总汇</h1>
            <p>拒绝黑恶势力</p>
        </div>
        <ul class="app-breadcrumb breadcrumb">
            <li class="breadcrumb-item"><i class="fa fa-home fa-lg"></i></li>
            <li class="breadcrumb-item"><a href="@Url.Action("Index","Manager")">站内总汇</a></li>
        </ul>
    </div>
    <div class="tile mb-4">
        <a href="@Url.Action("Add","Manager")">管理员添加</a>
        <table class="table">
            <tr>
                <th>
                   管理员ID
                </th>
                <th>
                   管理员名
                </th>
                <th>
                   管理员密码
                </th>
                <th>
                    管理员添加时间
                </th>
                <th>
                    
                </th>
            </tr>
            @foreach (var item in Model.GetPagingData())
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Man_ID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Man_Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Man_Pas)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Man_Time)
                    </td>
                    <td>
                        @Html.ActionLink("修改", "Edit", new { id = item.Man_ID })|
                        @Html.ActionLink("删除", "Delete", new { id = item.Man_ID })
                    </td>

                </tr>
            }
            <tfoot>
                <tr>
                    <td></td>
                    <td></td>
                    <td></td>
                    @if (Model.HasPrev)
                    {
                        <td><a href="@Url.Action("Index","Manager",new { pageIndex = Model.PageIndex - 1 })">上一页</a></td>
                    }
                    else
                    {
                        <td><em style="color:dimgray">上一页</em></td>
                    }
                    @if (Model.HasNext)
                    {
                        <td>
                            <a href="@Url.Action("Index", "Manager", new { pageIndex = Model.PageIndex + 1 })">下一页</a>
                        </td>
                    }
                    else
                    {
                        <td><em style="color:dimgray">下一页</em></td>
                    }
                </tr>
            </tfoot>
        </table>
        <br /><br /><br />
        <div>
            @{ Html.RenderAction("ManagerDetails", "Manager");}
        </div>
    </div>
</body>
       
