@using Model
@model SEEWeb.ViewModel.ManagerDetailsViewModel
@{
    ViewBag.Title = "ManagerDetails";
    Layout = null;
}


@{ 
    int pointcount=Model.Pic_Point1.Count() + Model.Album_Point1.Count();
}
 


<div class="row">
    <div class="layui-col-md2 ">
        <div class="widget-small primary coloured-icon">
            
            <div class="info">
             &nbsp;
            </div>
        </div>
    </div>
    <div class="layui-col-md2 ">
        <div class="widget-small primary coloured-icon">
            <i class="icon fa fa-users fa-3x"></i>
            <div class="info">
                <h4>图片</h4>
                <p>
                    <b>@Model.Picture1.Count() </b>
                </p>
            </div>
        </div>
    </div>

    <div class="layui-col-md2 ">
        <div class="widget-small primary coloured-icon">
            <i class="icon fa fa-star fa-3x"></i>
            <div class="info">
                <h4>喜欢</h4>
                <p>
                    <b>@pointcount </b>
                </p>
            </div>
        </div>
    </div>

    <div class="layui-col-md2">
        <div class="widget-small primary coloured-icon">
            <i class="	fa fa-th-large	fa-3x "></i>
            <div class="info">
                <h4>活动</h4>
                <p>
                    <b>@pointcount </b>
                </p>
            </div>
        </div>
    </div>
    <div class="layui-col-md2  ">
        <div class="widget-small primary coloured-icon">
            <i class="icon fa fa-list fa-3x"></i>
            <div class="info">
                <h4>相册</h4>
                <p>
                    <b>@Model.Album1.Count() </b>
                </p>
            </div>
        </div>
    </div>

    <div class="layui-col-md2 ">
        <div class="widget-small primary coloured-icon">
            <i class="icon fa fa-newspaper fa-3x"></i>
            <div class="info">
                <h4>新闻</h4>
                <p>
                    <b>@Model.News1.Count() </b>
                </p>
            </div>
        </div>
    </div>
</div>

