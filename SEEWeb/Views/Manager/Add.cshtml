@model Model.Manager
    @{ 
        ViewBag.Title = "Add";
        Layout = "~/Views/Shared/_LayoutManager.cshtml";
    }

<link href="~/Content/layui/css/layui.css" rel="stylesheet" />
<body>
    <div class="layui-row">
        <blockquote class="layui-elem-quote layui-text">
            管理员添加
        </blockquote>
    </div>
    <fieldset class="layui-elem-field layui-field-title" style="margin-top: 20px;">
  
    </fieldset>

    @using (Html.BeginForm("Add", "Manager", FormMethod.Post, new { enctype = "multipart/form-date" }))
    {
        <div class="layui-form">
            @Html.AntiForgeryToken()
            <div class="layui-form-item">
                <label class="layui-form-label">管理员名</label>
                <div class="layui-input-block">
                    @Html.EditorFor(model => model.Man_Name, new { htmlAttributes = new { @class = "layui-input" } })
                    @Html.ValidationMessageFor(model => model.Man_Name)
                </div>
            </div>
            <div  class="layui-form-item">
                <label class="layui-form-label">管理员密码</label>
                <div class="layui-input-block">
                    @Html.EditorFor(model => model.Man_Pas, new { htmlAttributes = new { @class = "layui-input" } })
                    @Html.ValidationMessageFor(model => model.Man_Pas)
                </div>
            </div>

            <div>
                <div>
                    <input type="submit" value="创建" style="float:right;" class="layui-btn layui-btn-normal" />
                </div>
            </div>
        </div>

    }
</body>


